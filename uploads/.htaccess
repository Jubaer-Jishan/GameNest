# Prevent directory listing
Options -Indexes

# Allow only image files
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny access to other file types
<FilesMatch "\.(?!(jpg|jpeg|png|gif|webp)$)">
    Order Allow,Deny
    Deny from all
</FilesMatch>
